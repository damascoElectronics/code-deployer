# Dockerfile.test - Container for testing and CI
FROM python:3.9-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    bc \
    && rm -rf /var/lib/apt/lists/*

# Set environment variables
ENV PYTHONPATH=/app/src
ENV COVERAGE_THRESHOLD=80
ENV PYLINT_THRESHOLD=8.0

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy project files
COPY . .

# Create reports directory
RUN mkdir -p reports/{tests,coverage,pylint,badges}

# Make scripts executable
RUN chmod +x scripts/run-tests.sh

# Set default command
CMD ["./scripts/run-tests.sh"]

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import sys; sys.exit(0)"

# Labels for metadata
LABEL maintainer="your-email@example.com"
LABEL version="1.0"
LABEL description="Testing container for Python code quality pipeline"